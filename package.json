{
  "name": "littlelazyimporter",
  "displayName": "little lazy importer",
  "version": "0.0.1",
  "description": "Convert standard ESM import to React Lazy imports",
  "categories": [
    "Other"
  ],
  "bugs": {
    "url": "https://github.com/simpel/little-lazy-imports/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simpel/little-lazy-imports"
  },
  "license": "CC-BY-SA-4.0",
  "publisher": "se-joelsanden",
  "main": "./dist/extension.js",
  "scripts": {
    "commit": "cz",
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "xo --fix",
    "package": "webpack --mode production --devtool hidden-source-map",
    "prepare": "husky install",
    "release": "standard-version",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run package",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "contributes": {
    "commands": [
      {
        "command": "littlelazyimporter.convertToReactLazy",
        "title": "Convert to React Lazy Imports",
        "category": "Little Lazy Importer"
      }
    ]
  },
  "activationEvents": [
    "onCommand:littlelazyimporter.convertToReactLazy"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "xo": "latest"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#8D0377",
    "theme": "dark"
  },
  "dependencies": {
    "eslint-plugin-unused-imports": "^2.0.0"
  }
}